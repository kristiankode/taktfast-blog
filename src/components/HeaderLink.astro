---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const normalize = (value: string) =>
  value.length > 1 && value.endsWith("/") ? value.slice(0, -1) : value;
const hrefValue = typeof href === "string" ? href : href?.toString() || "";
const normalizedHref = normalize(hrefValue);
const normalizedPath = normalize(pathname);
const isBlogLink = normalizedHref.includes("/blog");
const isActive =
  normalizedHref === normalizedPath ||
  (isBlogLink && normalizedPath.startsWith(`${normalizedHref}/`));
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    font-weight: bolder;
    text-decoration: underline;
  }
</style>
