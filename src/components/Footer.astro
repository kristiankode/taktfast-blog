---
const today = new Date();
---

<footer>
	<div class="footer-inner">
		&copy; {today.getFullYear()} Taktfast. All rights reserved.
		<div class="footer-links">
			<a href="https://klimp.taktfast.no">Klimp - Chord Chart Maker</a>
			<a href="https://taktfast.no">Taktfast</a>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		color: rgba(71, 85, 105, 1);
		text-align: center;
		font-size: 0.85em;
	}
	.footer-inner {
		max-width: 960px;
		margin: 0 auto;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-top: 0.75em;
	}
	.footer-links a {
		color: rgba(71, 85, 105, 1);
		text-decoration: none;
		transition: color 0.15s ease;
	}
	.footer-links a:hover {
		color: rgba(15, 23, 42, 1);
	}
</style>
